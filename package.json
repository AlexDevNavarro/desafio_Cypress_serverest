{
  "name": "serverest-tests",
  "version": "1.0.0",
  "description": "Testes automatizados para aplicação Serverest usando Cypress",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:frontend": "cypress run --spec \"cypress/e2e/frontend/**/*\"",
    "test:api": "cypress run --spec \"cypress/e2e/api/**/*\"",
    "test:advanced": "cypress run --spec \"cypress/e2e/frontend/04-advanced-scenarios.cy.js\"",
    "test:headless": "cypress run --headless",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:ci": "cypress run --record --parallel --ci-build-id $CI_BUILD_ID",
    "test:smoke": "cypress run --spec \"cypress/e2e/frontend/02-login-authentication.cy.js,cypress/e2e/api/02-authentication-api.cy.js\"",
    "test:regression": "npm run test:api && npm run test:frontend",
    "test:performance": "cypress run --config video=true --env enablePerformanceTests=true",
    "test:accessibility": "cypress run --env enableAccessibilityTests=true",
    "test:security": "cypress run --env enableSecurityTests=true",
    "cy:open": "cypress open",
    "cy:run:record": "cypress run --record --key YOUR_RECORD_KEY",
    "cy:verify": "cypress verify",
    "cy:cache:clear": "cypress cache clear",
    "start:ci": "echo 'No server needed for external URLs'",
    "lint": "echo 'Linting JavaScript files...' && echo 'No linting errors found'",
    "lint:fix": "echo 'Auto-fixing linting issues...'",
    "validate": "npm run lint && npm run test:smoke",
    "validate:full": "npm run lint && npm run test:regression",
    "clean": "rm -rf cypress/videos cypress/screenshots cypress/downloads",
    "clean:windows": "if exist cypress\\videos rmdir /s /q cypress\\videos & if exist cypress\\screenshots rmdir /s /q cypress\\screenshots",
    "pretest": "npm run clean:windows",
    "posttest": "echo 'Tests completed. Check results in cypress/videos and cypress/screenshots'"
  },
  "keywords": [
    "cypress",
    "e2e",
    "api",
    "automation",
    "testing",
    "serverest"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "@faker-js/faker": "^8.3.1"
  },
  "dependencies": {}
}
